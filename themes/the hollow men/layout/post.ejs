<div class="post">
    <div class="post-header">
        <div class="title">
            <h1><%= page.title %></h1>
            <a class="permalink" href="/"><i class="fas fa-link"></i></a>
        </div>
    
        <div class="info">
            <span class="time"><i class="far fa-calendar-alt"></i> <%= date(page.date, config.date_format) %></span>
            <span class="time"><i class="far fa-clock"></i> <%= time(page.date, config.time_format) %></span>
            <span class="categories">filed under: 
                <% if (page.categories && page.categories.length) { %> 
                    <%- list_categories(page.categories, {
                        show_count: false,
                        class: '',
                        style: 'none',
                        separator: ','
                    }) %>
                <% } else { %> none <% } %></span>
        </div>
    </div>
    <div class="post-body">
        <p><%- page.content %></p>
    </div>

    <% if (page.tags && page.tags.length) { %>
    <div class="tags">
        <i class="fas fa-tags"></i>
        <%- list_tags(page.tags, {show_count: false, separator: ', ', class: 'tags', style: 'none'}) %>
    </div>
    <% } %>
    
</div>