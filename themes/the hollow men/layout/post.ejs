<div class="post">
    <div class="post-header">
        <div class="title">
            <h1><%= page.title %></h1>
            <a class="permalink" href="/"><i class="fas fa-link"></i></a>
        </div>
    
        <div class="info">
            <span class="time"><i class="far fa-calendar-alt"></i> <%= date(page.date, config.date_format) %></span>
            <span class="time"><i class="far fa-clock"></i> <%= date(page.time, config.time_format) %></span>
            <span class="tags">filed under: 
                <% if (page.categories && page.categories.length) { %> 
                    <%- list_categories(page.categories, {
                        show_count: false,
                        class: '',
                        style: 'none',
                        separator: ','
                    }) %>
                <% } else { %> none <% } %></span>
        </div>
    </div>
    <div class="post-body">
        <p><%- page.content %></p>
    </div>
</div>